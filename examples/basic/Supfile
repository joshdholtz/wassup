  pane.width = 0.5
  pane.top = 0
  pane.left = 0

  pane.highlight = true
  pane.title = "Open PRs - fastlane/fastlane"

  pane.interval = 60 * 5
  pane.show_refresh = true

  pane.type = Panes::GitHub::PullRequests.new(org: 'fastlane', repo: 'fastlane')
end

